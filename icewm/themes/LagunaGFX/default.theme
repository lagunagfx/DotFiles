TitleFontNameXft="roboto-regular:size=12"
NormalTaskBarFontNameXft="ubuntu:size=11,Sans:size=11"
ActiveTaskBarFontNameXft="ubuntu:size=11,Sans:size=11:bold"
MenuFontNameXft = "roboto-regular:size=10,Sans:size=11"
StatusFontNameXft = "ubuntu:size=11,Sans:size=11"
ListBoxFontNameXft = "ubuntu:size=11,Sans:size=11"
QuickSwitchFontNameXft = "roboto:size=12"
InputFontNameXft = "ubuntu:size=11,Sans:size=11"
ToolTipFontNameXft = "ubuntu:size=11,Sans:size=11"
ClockFontNameXft = "ubuntu:size=11,Sans:size=11"

